@model Course

<div class="card mt-3" id="@Model.id">
    <div class="row">
        <div class="col-md-3">
            <img src="~/img/@Model.Image" class="img-fluid rounded-start">
        </div>
        <div class="col-md-9">
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.id">
                <h5 class="card-title ">@Model.Title</h5>
            </a>
            <p class="card-text">@Model.Description</p>
        </div>
    </div>
</div>