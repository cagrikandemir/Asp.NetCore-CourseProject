@model Product
@{
    ViewData["Title"] = "Create Form";
}
<form asp-controller="Home" asp-action="Create" method="post">
<div class="mb-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input asp-asp-for="Name" class="form-control">
</div>

<div class="mb-3">
    <label asp-asp-for="Despcription" class="form-label">Despcription</label>
    <input asp-asp-for="Despcription" class="form-control">
</div>

<div class="mb-3">
    <label asp-asp-for="Image" class="form-label">Image</label>
    <input asp-asp-for="Image" class="form-control">
</div>

<div class="mb-3">
    <label asp-asp-for="Price" class="form-label">Price</label>
    <input asp-asp-for="Price" class="form-control">
</div>

<div class="mb-3">
    <label asp-asp-for="CategoryId" class="form-label">Category</label>
    <select asp-asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
        <option value="0">All</option>
    </select>
</div>
<div class="mb-3 form-check">
    <input asp-for="IsActive" class="form-check-input">
    <label asp-for="IsActive" class="form-check-label"></label>
</div>
<button class="btn btn-primary" type="submit">Ekle</button>
</form>
